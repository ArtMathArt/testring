{
  "manifest_version": 2,
  "name": "TestRing",
  "author": "RingCentral",
  "description": "TestRing recording extension.",
  "browser_action": {
    "default_title": "TestRing",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "background": {
    "scripts": [
      "background.bundle.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.bundle.js"
      ]
    }
  ],
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "tabs"
  ]
}
